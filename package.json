{
  "name": "shubham-website",
  "version": "1.0.0",
  "private": true,
  "description": "Shubham Attri's personal website - A modern full-stack application",
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm run start",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint -- --fix",
    "type-check": "cd frontend && npx tsc --noEmit",
    "test": "echo 'No tests configured yet'",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint -- --fix",
      "cd frontend && npx tsc --noEmit"
    ],
    "backend/**/*.{js,jsx,ts,tsx}": [
      "cd backend && npm run lint -- --fix",
      "cd backend && npx tsc --noEmit"
    ]
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwindcss",
    "personal-website",
    "portfolio"
  ],
  "author": "Shubham Attri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamattri/personal-website.git"
  },
  "bugs": {
    "url": "https://github.com/shubhamattri/personal-website/issues"
  },
  "homepage": "https://shubhamattri.vercel.app"
} 